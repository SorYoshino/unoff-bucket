{
    "version": "25.12.0",
    "description": "Disk usage visualizer",
    "homepage": "https://apps.kde.org/ark/",
    "license": "GPL-2.0-or-later",
    "notes": "If you want to get the latest development branch-based installer, please install `ark-nightly` from Versions bucket.",
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/utilities/ark/release-25.12/windows/ark-release_25.12-2387-windows-cl-msvc2022-x86_64.7z",
            "hash": "b830820757d46348e953c02b47f3dde0ee61f02ab9d884ef70938ec34c35e633"
        }
    },
    "bin": "bin\\ark.exe",
    "shortcuts": [
        [
            "bin\\ark.exe",
            "Ark"
        ]
    ],
    "checkver": {
        "script": [
            "$feed_url = 'https://apps.kde.org/{0}/index.xml' -f $app",
            "$rss_feed = [xml](Invoke-WebRequest -Uri $feed_url -UseBasicParsing).Content",
            "$release_title = $rss_feed.rss.channel.item[0].title",
            "if ($release_title -match 'Release (?<version>[\\d.]+)') {",
            "    $version = $Matches['version']",
            "    $minor_branch = ($version -split '\\.')[0..1] -join '.'",
            "    $release_url = 'https://cdn.kde.org/ci-builds/utilities/{0}/release-{1}/windows/' -f $app, $minor_branch",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -First 1 -Expand href",
            "    Write-Output \"$version , $archive_name\"",
            "}"
        ],
        "regex": "([\\d.]+) , ark-release_(?<release>[\\d.-]+)-windows-cl-(?<lib>\\w+)-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/utilities/ark/release-$majorVersion.$minorVersion/windows/ark-release_$matchRelease-windows-cl-$matchLib-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
