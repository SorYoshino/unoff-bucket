{
    "version": "1.2",
    "description": "A filter plugin for 7-Zip that enhances compression efficiency for specific multimedia and executable file types through automated pre-processing techniques.",
    "homepage": "https://www.tc4shell.com/en/7zip/mfilter/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.tc4shell.com/en/termsofuse/"
    },
    "url": "https://www.tc4shell.com/binary/MFilter.zip",
    "hash": "88cf912f84c0d9cb36646e095ae64f6c8e5c646a4699e922b507402a10ecd754",
    "architecture": {
        "64bit": {
            "pre_install": [
                "Copy-Item -Path \"$dir\\64\\*\" -Destination $dir -Force -Recurse",
                "'32', '64' | ForEach-Object -Process { Remove-Item -Path \"$dir\\$_\" -Recurse -Force -ErrorAction SilentlyContinue }"
            ]
        },
        "32bit": {
            "pre_install": [
                "Copy-Item -Path \"$dir\\32\\*\" -Destination $dir -Force -Recurse",
                "'32', '64' | ForEach-Object -Process { Remove-Item -Path \"$dir\\$_\" -Recurse -Force -ErrorAction SilentlyContinue }"
            ]
        }
    },
    "installer": {
        "script": [
            "$7z_path = friendly_path -Path $(Get-CommandPath -Command '7z.exe')",
            "if ($null -eq $7z_path) { abort \"`nCould not locate '7z.exe' in system PATH. Abort installation.\" }",
            "$codecs_dir = Join-Path -Path $(Split-Path -Path $7z_path -Parent) -ChildPath 'Codecs'",
            "if (-not (Test-Path -Path $codecs_dir -PathType Container)) { ensure $codecs_dir | Out-Null }",
            "Copy-Item -Path \"$dir\\*\" -Destination $codecs_dir -Exclude '*.json', 'ReadMe.txt' -Force -Recurse"
        ]
    },
    "uninstaller": {
        "script": [
            "$7z_path = friendly_path -Path $(Get-CommandPath -Command '7z.exe')",
            "$codecs_dir = Join-Path -Path $(Split-Path -Path $7z_path -Parent) -ChildPath 'Codecs'",
            "Get-ChildItem -Path $dir -Exclude '*.json', 'ReadMe.txt' | ForEach-Object -Process {",
            "    Remove-Item -Path \"$codecs_dir\\$($_.Name)\" -Recurse -Force -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "checkver": "Plugin version:\\s*([\\d.]+)",
    "autoupdate": {
        "url": "https://www.tc4shell.com/binary/MFilter.zip"
    }
}
