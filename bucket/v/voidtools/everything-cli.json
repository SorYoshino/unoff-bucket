    "pre_install": [
        "# Hard links are not applicable here because the application creates a new file instead of modifying the existing one in place.",
        "ensure $persist_dir | Out-Null",
        "if ($cmd -eq 'install' -and -not (Test-Path -Path \"$persist_dir\\*\")) { return }",
        "if (Test-Path -Path \"$persist_dir\\es.ini\" -PathType Leaf) {",
        "    Copy-Item -Path \"$persist_dir\\es.ini\" -Destination $dir -Force",
        "}"
    ],
    "bin": "es.exe",
    "pre_uninstall": [
        "# Hard links are not applicable here because the application creates a new file instead of modifying the existing one in place.",
        "if ($cmd -eq 'uninstall' -and $purge) { return }",
        "if (Test-Path -Path \"$dir\\es.ini\" -PathType Leaf) {",
        "    Copy-Item -Path \"$dir\\es.ini\" -Destination $persist_dir -Force",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/voidtools/es"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/voidtools/ES/releases/download/$version/ES-$version.x64.zip"
            },
            "32bit": {
                "url": "https://github.com/voidtools/ES/releases/download/$version/ES-$version.x86.zip"
            },
            "arm64": {
                "url": "https://github.com/voidtools/ES/releases/download/$version/ES-$version.ARM64.zip"
            }
        }
    }
