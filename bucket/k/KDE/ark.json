{
    "version": "25.12-2446",
    "description": "A graphical archive management utility that allows users to efficiently browse, create, extract, and modify compressed archives through an intuitive user interface.",
    "homepage": "https://apps.kde.org/ark/",
    "license": {
        "identifier": "GPL-2.0-or-later",
        "url": "https://invent.kde.org/utilities/ark/-/blob/HEAD/LICENSES/GPL-2.0-or-later.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/utilities/ark/release-25.12/windows/ark-release_25.12-2446-windows-cl-msvc2022-x86_64.7z",
            "hash": "b0d93a857dc6e9e51e9be756d0641754d51153ea1eec3c8b97c7a267c7b75400"
        }
    },
    "bin": "bin\\ark.exe",
    "shortcuts": [
        [
            "bin\\ark.exe",
            "Ark"
        ]
    ],
    "checkver": {
        "script": [
            "$app_type = 'utilities'",
            "$path_filter = 'release-*/'",
            "$releases_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/' -f $app, $app_type",
            "$version_sort = { if ($_.href -match '([\\d.]+)/$') { [version]$Matches[1] } }",
            "$releases_page = Invoke-WebRequest -Uri $releases_url -UseBasicParsing -ErrorAction Stop",
            "$path_segments = $releases_page.links | Where-Object { $_.href -like $path_filter } |",
            "        Sort-Object -Property $version_sort -Descending | ForEach-Object -MemberName href",
            "foreach ($path_segment in $path_segments.TrimEnd('/')) {",
            "    $release_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/{2}/windows/' -f $app, $app_type, $path_segment",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing -ErrorAction Stop",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -ExpandProperty href -First 1",
            "    if ($archive_name -match '^\\S') { Write-Output $archive_name; break }",
            "}"
        ],
        "regex": "ark-release_([\\d.-]+)-windows-cl-(?<lib>\\w+)-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/utilities/ark/release-$matchHead/windows/ark-release_$version-windows-cl-$matchLib-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
