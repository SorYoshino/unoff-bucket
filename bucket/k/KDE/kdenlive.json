{
    "version": "25.12-12029",
    "description": "A professional video editor supporting multiple formats, advanced editing, effects, audio post-production, and flexible rendering options.",
    "homepage": "https://kdenlive.org",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://invent.kde.org/multimedia/kdenlive/-/blob/HEAD/COPYING"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/multimedia/kdenlive/release-25.12/windows/kdenlive-release_25.12-12029-windows-gcc-x86_64.7z",
            "hash": "ed3b24728335a57bb9fe7f7017fee8a2f8f78d227391712c0d78cf5aaf22bfcc"
        }
    },
    "bin": "bin\\kdenlive.exe",
    "shortcuts": [
        [
            "bin\\kdenlive.exe",
            "Kdenlive"
        ]
    ],
    "checkver": {
        "script": [
            "$app_type = 'multimedia'",
            "$path_filter = 'release-*/'",
            "$releases_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/' -f $app, $app_type",
            "$version_sort = { if ($_.href -match '([\\d.]+)/$') { [version]$Matches[1] } }",
            "$releases_page = Invoke-WebRequest -Uri $releases_url -UseBasicParsing -ErrorAction Stop",
            "$path_segments = $releases_page.links | Where-Object { $_.href -like $path_filter } |",
            "        Sort-Object -Property $version_sort -Descending | ForEach-Object -MemberName href",
            "foreach ($path_segment in $path_segments.TrimEnd('/')) {",
            "    $release_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/{2}/windows/' -f $app, $app_type, $path_segment",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing -ErrorAction Stop",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -ExpandProperty href -First 1",
            "    if ($archive_name -match '^\\S') { Write-Output $archive_name; break }",
            "}"
        ],
        "regex": "kdenlive-release_([\\d.-]+)-windows-gcc-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/multimedia/kdenlive/release-$matchHead/windows/kdenlive-release_$version-windows-gcc-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
