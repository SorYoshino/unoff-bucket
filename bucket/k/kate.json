{
    "version": "25.12.0",
    "description": "Multi-document editor",
    "homepage": "https://kate-editor.org",
    "license": "LGPL-2.0-only",
    "notes": "If you want to get the latest development branch-based installer, please install `kate-nightly` from Versions bucket.",
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/utilities/kate/release-25.12/windows/kate-release_25.12-10801-windows-cl-msvc2022-x86_64.7z",
            "hash": "654d0aab95214fce7360795788b2cfbee293cf41db39ab68f803285fe73d22b6"
        }
    },
    "bin": "bin\\kate.exe",
    "shortcuts": [
        [
            "bin\\kate.exe",
            "Kate"
        ]
    ],
    "checkver": {
        "script": [
            "$feed_url = 'https://apps.kde.org/{0}/index.xml' -f $app",
            "$rss_feed = [xml](Invoke-WebRequest -Uri $feed_url -UseBasicParsing).Content",
            "$release_title = $rss_feed.rss.channel.item[0].title",
            "if ($release_title -match 'Release (?<version>[\\d.]+)') {",
            "    $version = $Matches['version']",
            "    $minor_branch = ($version -split '\\.')[0..1] -join '.'",
            "    $release_url = 'https://cdn.kde.org/ci-builds/utilities/{0}/release-{1}/windows/' -f $app, $minor_branch",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -First 1 -Expand href",
            "    Write-Output \"$version , $archive_name\"",
            "}"
        ],
        "regex": "([\\d.]+) , kate-release_(?<release>[\\d.-]+)-windows-cl-(?<lib>\\w+)-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/utilities/kate/release-$majorVersion.$minorVersion/windows/kate-release_$matchRelease-windows-cl-$matchLib-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
