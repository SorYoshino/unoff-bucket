{
    "version": "25.08.3",
    "description": "Convergent podcast application",
    "homepage": "https://apps.kde.org/kasts/",
    "license": "LGPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/multimedia/kasts/release-25.08/windows/kasts-release_25.08-4023-windows-cl-msvc2022-x86_64.7z",
            "hash": "5aa0479c004c5774c48b894a17f02046b3508149cbb1f34ef2bfa9478fb6e4d4"
        }
    },
    "bin": "bin\\kasts.exe",
    "shortcuts": [
        [
            "bin\\kasts.exe",
            "Kasts"
        ]
    ],
    "checkver": {
        "script": [
            "$feed_url = 'https://apps.kde.org/{0}/index.xml' -f $app",
            "$rss_feed = [xml](Invoke-WebRequest -Uri $feed_url -UseBasicParsing).Content",
            "$release_title = $rss_feed.rss.channel.item[0].title",
            "if ($release_title -match 'Release (?<version>[\\d.]+)') {",
            "    $version = $Matches['version']",
            "    $minor_branch = ($version -split '\\.')[0..1] -join '.'",
            "    $release_url = 'https://cdn.kde.org/ci-builds/multimedia/{0}/release-{1}/windows/' -f $app, $minor_branch",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -First 1 -Expand href",
            "    Write-Output \"$version , $archive_name\"",
            "}"
        ],
        "regex": "([\\d.]+) , kasts-release_(?<release>[\\d.-]+)-windows-cl-(?<lib>\\w+)-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/multimedia/kasts/release-$majorVersion.$minorVersion/windows/kasts-release_$matchRelease-windows-cl-$matchLib-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
