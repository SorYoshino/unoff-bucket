{
    "version": "25.12-5914",
    "description": "A cross-platform utility that enables communication and data transfer over local networks, supporting file exchange, clipboard sharing, notification synchronization, remote interaction, and other related capabilities.",
    "homepage": "https://kdeconnect.kde.org",
    "license": {
        "identifier": "GPL-2.0-or-later",
        "url": "https://invent.kde.org/network/kdeconnect-kde/-/blob/HEAD/LICENSES/GPL-2.0-or-later.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.kde.org/ci-builds/network/kdeconnect-kde/release-25.12/windows/kdeconnect-kde-release_25.12-5914-windows-cl-msvc2022-x86_64.7z",
            "hash": "59ba3e1872fe5f3ec3af6b81ec9829fa447f30e6fea3846c44cea91619f2ad55"
        }
    },
    "bin": "bin\\kdeconnect-cli.exe",
    "shortcuts": [
        [
            "bin\\kdeconnect-app.exe",
            "KDEConnect"
        ]
    ],
    "checkver": {
        "script": [
            "$app_type = 'network'",
            "$path_filter = 'release-*/'",
            "$releases_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/' -f \"$app-kde\", $app_type",
            "$version_sort = { if ($_.href -match '([\\d.]+)/$') { [version]$Matches[1] } }",
            "$releases_page = Invoke-WebRequest -Uri $releases_url -UseBasicParsing -ErrorAction Stop",
            "$path_segments = $releases_page.links | Where-Object { $_.href -like $path_filter } |",
            "        Sort-Object -Property $version_sort -Descending | ForEach-Object -MemberName href",
            "foreach ($path_segment in $path_segments.TrimEnd('/')) {",
            "    $release_url = 'https://cdn.kde.org/ci-builds/{1}/{0}/{2}/windows/' -f \"$app-kde\", $app_type, $path_segment",
            "    $download_page = Invoke-WebRequest -Uri $release_url -UseBasicParsing -ErrorAction Stop",
            "    $archive_name = $download_page.Links | Where-Object { $_.href -match '\\.7z$' } | Select-Object -ExpandProperty href -First 1",
            "    if ($archive_name -match '^\\S') { Write-Output $archive_name; break }",
            "}"
        ],
        "regex": "kdeconnect-kde-release_([\\d.-]+)-windows-cl-(?<lib>\\w+)-x86_64\\.7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.kde.org/ci-builds/network/kdeconnect-kde/release-$matchHead/windows/kdeconnect-kde-release_$version-windows-cl-$matchLib-x86_64.7z",
                "hash": {
                    "url": "$url.sha256"
                }
            }
        }
    }
}
